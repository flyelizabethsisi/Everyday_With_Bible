<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".fragment.OnboardingFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/english_button"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="@font/josefin_sans_bold"
        android:gravity="center"
        android:text="@string/english_button"
        android:textColor="#FFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/spanish_button"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="@font/josefin_sans_bold"
        android:gravity="center"
        android:text="@string/espanol_button"
        android:textColor="#FFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/french_button"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="@font/josefin_sans_bold"
        android:gravity="center"
        android:text="@string/francais_button"
        android:textColor="#FFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/portuguese_button"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="@font/josefin_sans_bold"
        android:gravity="center"
        android:text="@string/portuguese_button"
        android:textColor="#FFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/chinese_button"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="@font/josefin_sans_bold"
        android:gravity="center"
        android:text="@string/chinese_button"
        android:textColor="#FFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>